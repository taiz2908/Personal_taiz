apiVersion: apps/v1
kind: Deployment
metadata:
  name: ngin-deployment
  labels:
   app: nginx
  namespace:
spec:
  replicas: 3
  selector:
   matchLabels:
    app: nginx
  template:
   metadata:
    app: nginx
  spec:
    containers:
     - name: nginx-deployment
       image:
       ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: nginx-service
spec:
  selector:
    app: nginx
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: LoadBalancer