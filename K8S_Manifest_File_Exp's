==========================="""ConfigMap & Secrete"""=====================================================

apiVersion: v1
kind: ConfigMap
metadata:
 name: mongodb-configmap
immutable: true or false
data:
 username: admin
 password: password 
 mongo.conf: |
  storage:
   dbpasth: /opt
  replication:
   replSetName: "rs0"

 
